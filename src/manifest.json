{
  "manifest_version": 3,
  "name": "YouTube Flexible Side Tabs",
  "version": "1.0",
  "description": "Organize description, comments, and related videos into side tabs on YouTube.",
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
